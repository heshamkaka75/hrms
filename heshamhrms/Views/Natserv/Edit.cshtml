@model heshamhrms.Models.national_services

@{
    ViewBag.Title = "تعديل بيانات مجند خدمة";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>تعديل بيانات مجند خدمة</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.national_service_id)

        <div class="form-group">
            @Html.LabelFor(model => model.national_service_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.national_service_name)
                @Html.ValidationMessageFor(model => model.national_service_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_of_birth, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field تاريخ الميلاد must be a date." id="Date_of_birth" name="Date_of_birth" type="text" value="@Html.DisplayFor(model => model.Date_of_birth)" />
                @Html.ValidationMessageFor(model => model.Date_of_birth)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Country_id">الجنسية</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Country_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Country_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.National_no, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.National_no)
                @Html.ValidationMessageFor(model => model.National_no)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone_no, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone_no)
                @Html.ValidationMessageFor(model => model.Phone_no)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="National_services_Religion_id">الديانة</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("National_services_Religion_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.National_services_Religion_id)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="National_services_Marital_Status_id">الحالة الاجتماعية</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("National_services_Marital_Status_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.National_services_Marital_Status_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="national_service_Qualification_id">المؤهل الدراسي</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("national_service_Qualification_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.national_service_Qualification_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.national_service_Qualification_university, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.national_service_Qualification_university)
                @Html.ValidationMessageFor(model => model.national_service_Qualification_university)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.national_service_Qualification_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field تاريخ التخرج must be a date." id="national_service_Qualification_date" name="national_service_Qualification_date" type="text" value="@Html.DisplayFor(model => model.national_service_Qualification_date)" />
                @Html.ValidationMessageFor(model => model.national_service_Qualification_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.start_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field بداية الخدمة must be a date." id="start_date" name="start_date" type="text" value="@Html.DisplayFor(model => model.start_date)" />
                @Html.ValidationMessageFor(model => model.start_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.End_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field نهاية الخدمة must be a date." id="End_date" name="End_date" type="text" value="@Html.DisplayFor(model => model.End_date)" />
                @Html.ValidationMessageFor(model => model.End_date)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Department_id">الإدارة / الفرع</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Department_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Department_id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تعديل بيانات مجند خدمة" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجوع للقائمة", "Index")
</div>


<script>
    $(function () {
        $("#Country_id").select2();
    });
</script>

<script>
    $(function () {
        $("#National_services_Religion_id").select2();
    });
</script>


<script>
    $(function () {
        $("#National_services_Marital_Status_id").select2();
    });
</script>

<script>
    $(function () {
        $("#national_service_Qualification_id").select2();
    });
</script>

<script>
