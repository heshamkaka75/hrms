@model heshamhrms.Models.Vacations

@{
    ViewBag.Title = "اجازة جديدة";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>اجازة جديدة</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2" for="Vacation_employee_name">اسم الموظف</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Vacation_employee_name", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Vacation_employee_name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Vacation_vt_id">نوع الاجازة</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Vacation_vt_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Vacation_vt_id)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Vacation_depatrments_id">الادارة - الفرع</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Vacation_depatrments_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Vacation_depatrments_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vacation_duration, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vacation_duration)
                @Html.ValidationMessageFor(model => model.Vacation_duration)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vacation_start_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vacation_start_date)
                @Html.ValidationMessageFor(model => model.Vacation_start_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vacation_end_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vacation_end_date)
                @Html.ValidationMessageFor(model => model.Vacation_end_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vacation_Reason, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vacation_Reason)
                @Html.ValidationMessageFor(model => model.Vacation_Reason)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Edit_by">ادخل بواسطة</label>
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-number="The field ادخل بواسطة must be a number." id="edit_by" name="edit_by" type="text" value="@Session["userid"] " readonly />
                @Html.ValidationMessageFor(model => model.Edit_by)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_time, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field تاريخ العملية must be a date." id="date_time" name="date_time" type="text" value="@DateTime.Today" readonly />
                @Html.ValidationMessageFor(model => model.Date_time)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="اجازة جديدة" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجع للقائمة", "Index")
</div>

<script>
    $(function () {
        $("#Vacation_employee_name").select2();
    });
</script>

<script>
    $(function () {
        $("#Vacation_vt_id").select2();
    });
</script>

<script>
    $(function () {
        $("#Vacation_depatrments_id").select2();
    });
</script>
