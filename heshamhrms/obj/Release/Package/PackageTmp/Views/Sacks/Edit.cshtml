@model heshamhrms.Models.sacks

@{
    ViewBag.Title = "تعديل أورنيك";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>تعديل أورنيك</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.sack_id)

        <div class="form-group">
            <label class="control-label col-md-2" for="sack_employee_id">اسم الموظف</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("sack_employee_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.sack_employee_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sack_data, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field تاريخ الاورنيك must be a date." id="sack_data" name="sack_data" type="text" value="@Html.DisplayFor(model => model.sack_data)" />
                @Html.ValidationMessageFor(model => model.sack_data)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sack_Reason, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sack_Reason)
                @Html.ValidationMessageFor(model => model.Sack_Reason)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Edit_by">ادخل بواسطة</label>
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-number="The field ادخل بواسطة must be a number." id="edit_by" name="edit_by" type="text" value="@Model.Edit_by" readonly />
                @Html.ValidationMessageFor(model => model.Edit_by)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_time, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field تاريخ العملية must be a date." id="date_time" name="date_time" type="text" value="@DateTime.Today" readonly />
                @Html.ValidationMessageFor(model => model.Date_time)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تعديل أورنيك" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجوع", "Index")
</div>


<script>
    $(function () {
        $("#sack_employee_id").select2();
    });
</script>
