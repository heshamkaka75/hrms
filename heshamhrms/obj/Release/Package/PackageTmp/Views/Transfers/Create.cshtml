@model heshamhrms.Models.Transfers

@{
    ViewBag.Title = "نقل موظف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>نقل موظف</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            
            <label class="control-label col-md-2" for="Transfer_employee_id">اسم الموظف</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Transfer_employee_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Transfer_employee_id)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Transfer_from_department_id">من</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Transfer_from_department_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Transfer_from_department_id)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Transfer_to_department_id">الي</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Transfer_to_department_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Transfer_to_department_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_time, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_time)
                @Html.ValidationMessageFor(model => model.Date_time)
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2" for="Edit_by">ادخل بواسطة</label>
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-number="The field ادخل بواسطة must be a number." id="edit_by" name="edit_by" type="text" value="@Session["userid"]" readonly />
                @Html.ValidationMessageFor(model => model.Edit_by)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="نقل موظف" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجوع", "Index")
</div>


<script>
    $(function () {
        $("#Transfer_employee_id").select2();
    });
</script>

<script>
    $(function () {
        $("#Transfer_from_department_id").select2();
    });
</script>

<script>
    $(function () {
        $("#Transfer_to_department_id").select2();
    });
</script>
