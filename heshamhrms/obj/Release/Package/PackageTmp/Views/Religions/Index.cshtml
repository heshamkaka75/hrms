@model IEnumerable<heshamhrms.Models.Religions>

@{
    ViewBag.Title = "الديانات";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>الديانات</h2>

<p>
    @Html.ActionLink("إنشاء ديانة", "Create")
</p>
<table class="table table-striped">
    <thead class="tablehead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Religion_name)
            </th>
            <th>تعديل</th>
            <th>تفاصيل</th>
            <th>حذف</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Religion_name)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Religion_id }) 
                </td>
                <td>
                    
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Religion_id })
                    
                </td>
                <td>
                    @Html.ActionLink("حذف", "Delete", new { id = item.Religion_id })
                </td>
            </tr>
        }

</table>
