@model heshamhrms.Models.Marital_Status

@{
    ViewBag.Title = "تعديل الحالة الاجتماعية";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>تعديل الحالة الاجتماعية</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Marital_Status_id)

        <div class="form-group">
            @Html.LabelFor(model => model.Marital_Status_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Marital_Status_name)
                @Html.ValidationMessageFor(model => model.Marital_Status_name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تعديل الحالة الاجتماعية" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("الرجوع للقائمة", "Index")
</div>
