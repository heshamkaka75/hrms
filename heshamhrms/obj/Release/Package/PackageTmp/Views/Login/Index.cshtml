@model heshamhrms.Models.Users

@{
    
    if (Session["userid"] != null)
    {
        Response.Redirect("~/Login/home");
    }
    Layout = null;
    ViewBag.Title = "تسيجل الدخول";
    
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/images/hri.ico">
    <title>@ViewBag.Title</title>


    <!-- stylesheet -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/font.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

</head>
<body>

    <div class="container">
        
        <br />
        <center ><img src="~/images/fb.jpg" style="width: 270px; border-radius: 16px;" /></center>
       
    </div>
    <br />
    <div class="container">

        <div class="form-signin">
            @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
{
    <table align="center">
        <tr>
            <td><input type="text" name="User_name" class="form-control" placeholder="أسم المستخدم" required autofocus></td>
        </tr>

        <tr>
            <td>@Html.ValidationMessageFor(model => model.User_name)</td>
        </tr>

        <tr>
            <td><input type="password" name="password" class="form-control" placeholder="كلمة المرور" required autofocus></td>
        </tr>

        

        <tr>
            <td>@Html.ValidationMessageFor(model => model.password)</td>
        </tr>
        <tr>
            <td colspan="2">
                <label class="field-validation-error errorup">@Html.DisplayFor(model => model.loginerr)</label>
            </td>
        </tr>
    

        <tr>
            <td><button class="btn btn-lg btn-primary btn-block" type="submit">تسجيل الدخول <i class="fa fa-user"></i></button></td>
        </tr>



        <tr>
            <td></td>
        </tr>        

    </table>
}
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
</body>
</html>
