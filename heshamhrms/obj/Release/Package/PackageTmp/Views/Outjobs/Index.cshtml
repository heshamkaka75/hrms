@model IEnumerable<heshamhrms.Models.Out_jobs>

@{
    ViewBag.Title = "المأموريات";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>المأموريات</h2>

<p>
    @Html.ActionLink("مامورية جديدة", "Create")
</p>
<table class="table table-striped">
    <thead class="tablehead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Out_job_date)
            </th>
            <th>
                اسم الموظف
            </th>
            <th>
                جهة المامورية
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Out_job_reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Out_job_duration)
            </th>

            <th>تعديل</th>
            <th>تفاصيل</th>
            <th>حذف</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Out_job_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employees.Employee_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departments.Department_name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Out_job_reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Out_job_duration)
                </td>

                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Out_job_id }) 
                    
                </td>
                <td>
                    
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Out_job_id }) 
                    
                </td>
                <td>
                    @Html.ActionLink("حذف", "Delete", new { id = item.Out_job_id })
                </td>
            </tr>
        }

</table>
