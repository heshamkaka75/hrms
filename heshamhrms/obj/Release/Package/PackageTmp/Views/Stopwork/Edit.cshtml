@model heshamhrms.Models.stop_working

@{
    ViewBag.Title = "تعديل إيقاف موظف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>تعديل إيقاف موظف</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.stop_working_id)

        <div class="form-group">
            <label class="control-label col-md-2" for="stop_working_Employee_id">اسم الموظف</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("stop_working_Employee_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.stop_working_Employee_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.stop_working_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field تاريخ الإيقاف must be a date." id="stop_working_date" name="stop_working_date" type="text" value="@Html.DisplayFor(model => model.stop_working_date)" />
                @Html.ValidationMessageFor(model => model.stop_working_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.stop_working_Reason, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.stop_working_Reason)
                @Html.ValidationMessageFor(model => model.stop_working_Reason)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Edit_by">ادخل بواسطة</label>
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-number="The field ادخل بواسطة must be a number." id="edit_by" name="edit_by" type="text" value="@Model.Edit_by" readonly />
                @Html.ValidationMessageFor(model => model.Edit_by)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_time, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field تاريخ العملية must be a date." id="date_time" name="date_time" type="text" value="@Html.DisplayFor(model => model.Date_time)" readonly />
                @Html.ValidationMessageFor(model => model.Date_time)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تعديل إيقاف موظف" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجوع", "Index")
</div>
<script>
    $(function () {
        $("#stop_working_Employee_id").select2();
    });
</script>
