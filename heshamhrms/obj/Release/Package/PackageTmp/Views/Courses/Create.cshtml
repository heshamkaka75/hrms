@model heshamhrms.Models.Courses

@{
    ViewBag.Title = "دورة جديدة";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    try
    {
        if (Session["username"].ToString() != "ADMIN")
        { Response.Redirect("~/Login/notauth"); }
    }
    catch { Response.Redirect("~/Login/home"); }
        
}

<h2>دورة جديدة</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2" for="Course_Course_name_id">اسم الدورة</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Course_Course_name_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Course_Course_name_id)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Course_Employee_id">اسم الموظف</label>
            <div class="col-md-10 formc2">
                @Html.DropDownList("Course_Employee_id", null, String.Empty, new { @class = "form-control mySelect2" })
                @Html.ValidationMessageFor(model => model.Course_Employee_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Course_location, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Course_location)
                @Html.ValidationMessageFor(model => model.Course_location)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Course_start_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Course_start_date)
                @Html.ValidationMessageFor(model => model.Course_start_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Course_end_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Course_end_date)
                @Html.ValidationMessageFor(model => model.Course_end_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Support_from, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Support_from)
                @Html.ValidationMessageFor(model => model.Support_from)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Edit_by">ادخل بواسطة</label>
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-number="The field ادخل بواسطة must be a number." id="edit_by" name="edit_by" type="text" value="@Session["userid"] " readonly />
                @Html.ValidationMessageFor(model => model.Edit_by)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_time, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-date="The field تاريخ العملية must be a date." id="date_time" name="date_time" type="text" value="@DateTime.Today" readonly />
                @Html.ValidationMessageFor(model => model.Date_time)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="دورة جديدة" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجوع للقائمة", "Index")
</div>


<script>
    $(function () {
        $("#Course_Course_name_id").select2();
    });
</script>

<script>
    $(function () {
        $("#Course_Employee_id").select2();
    });
</script>
